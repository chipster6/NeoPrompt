# Example environment configuration for NeoPrompt
# Copy to .env and adjust as needed.

# Core
LOG_LEVEL=INFO
# Environment name: dev|staging|prod
ENV=dev
# Database: for Docker Compose deployment, keep on volume
DATABASE_URL=sqlite:////data/app.sqlite
RECIPES_DIR=./prompt-templates
# Optional alias (takes precedence if set):
# PROMPT_TEMPLATES_DIR=./prompt-templates
# CORS: in non-dev, this MUST be a non-empty comma-separated list
CORS_ALLOW_ORIGINS=http://localhost
# Feature toggles (M0 stubs)
RATE_LIMIT_ENABLED=false
LOG_DEPRECATIONS=true
STORE_TEXT=0
EPSILON=0.10

# Reload
RECIPES_RELOAD_MODE=events  # events|poll|off
RECIPES_RELOAD_INTERVAL_SECONDS=5
RECIPES_DEBOUNCE_MS=300
RECIPES_RECURSIVE=0

# Validation
# When VALIDATION_STRICT=1, semantic-invalid recipes are excluded according to scope.
VALIDATION_STRICT=0
# Scope can be:
#  - all (default): exclude semantic-invalid in all categories
#  - critical: exclude only for law/medical
VALIDATION_STRICT_SCOPE=all

# Bandit (feature-flagged)
BANDIT_ENABLED=0
BANDIT_MIN_INITIAL_SAMPLES=1
BANDIT_OPTIMISTIC_INITIAL_VALUE=0.0

# Enhancer (optional)
ENHANCER_ENABLED=0
# ENHANCER_ENDPOINT=
# ENHANCER_API_KEY=
ENHANCER_MODEL=google/flan-t5-base
ENHANCER_MAX_NEW_TOKENS=128
